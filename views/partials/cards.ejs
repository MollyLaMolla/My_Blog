<% if (locals.blogData) { %>
    <% if (locals.blogData.length > 0) { %>
            <% blogData.forEach(blog => {%>
                <div class="card card-normal" id = "<%= blog.id %>"> 
                    <form class="card-main-form" action="/blog/<%= encodeURIComponent(blog.id) %>" method="get" class="card-form" id = "<%= blog.id %>">
                        <button class="card-button" type="submit">
                            <h1><%= blog.title %></h1>
                        <input type="hidden" name="blogId" value="<%= blog.id %>">
                        <input type="hidden" name="blogTitle" value="<%= blog.title %>">
                        <input type="hidden" name="blogContent" value="<%= blog.content %>">
                        <input type="hidden" name="blogDate" value="<%= blog.date %>">
                        <input type="hidden" name="blogTime" value="<%= blog.time %>">
                        
                    </button>
                    </form>
                    <% if (locals.logged) { %>
                        <div class="card-edit-mobile-btn no-display">
                            <svg xmlns="http://www.w3.org/2000/svg" height="24px" viewBox="0 -960 960 960" width="24px" fill="#e3e3e3">
                                <path d="M200-200h57l391-391-57-57-391 391v57Zm-80 80v-170l528-527q12-11 26.5-17t30.5-6q16 0 31 6t26 18l55 56q12 11 17.5 26t5.5 30q0 16-5.5 30.5T817-647L290-120H120Zm640-584-56-56 56 56Zm-141 85-28-29 57 57-29-28Z"/>
                            </svg>
                        </div>
                    <div class="card-settings no-display">
                        <form class="edit-form edit-button-default" action="/edit-blog" method="post">
                            <input type="hidden" name="blogTitle" value="<%= blog.title %>">
                            <input type="hidden" name="blogContent" value="<%= blog.content %>">
                            <input type="hidden" name="blogDate" value="<%= blog.date %>">
                            <input type="hidden" name="blogTime" value="<%= blog.time %>">
                            <input type="hidden" name="blogId" value="<%= blog.id %>">
                            <button class="edit-button" type="submit">
                                <svg xmlns="http://www.w3.org/2000/svg" height="24px" viewBox="0 -960 960 960" width="24px" fill="#e3e3e3">
                                    <path d="m370-80-16-128q-13-5-24.5-12T307-235l-119 50L78-375l103-78q-1-7-1-13.5v-27q0-6.5 1-13.5L78-585l110-190 119 50q11-8 23-15t24-12l16-128h220l16 128q13 5 24.5 12t22.5 15l119-50 110 190-103 78q1 7 1 13.5v27q0 6.5-2 13.5l103 78-110 190-118-50q-11 8-23 15t-24 12L590-80H370Zm70-80h79l14-106q31-8 57.5-23.5T639-327l99 41 39-68-86-65q5-14 7-29.5t2-31.5q0-16-2-31.5t-7-29.5l86-65-39-68-99 42q-22-23-48.5-38.5T533-694l-13-106h-79l-14 106q-31 8-57.5 23.5T321-633l-99-41-39 68 86 64q-5 15-7 30t-2 32q0 16 2 31t7 30l-86 65 39 68 99-42q22 23 48.5 38.5T427-266l13 106Zm42-180q58 0 99-41t41-99q0-58-41-99t-99-41q-59 0-99.5 41T342-480q0 58 40.5 99t99.5 41Zm-2-140Z"/>
                                </svg>
                            <h1>EDIT</h1>
                            </button>
                        </form>
                        <form class="delete-form delete-button-default" action="/delete-blog" method="post">
                            <input type="hidden" name="blogToDeleteId" value="<%= blog.id %>">
                            <button class="delete-button" type="submit">
                                <svg xmlns="http://www.w3.org/2000/svg" height="24px" viewBox="0 -960 960 960" width="24px" fill="#e3e3e3">
                                    <path d="M280-120q-33 0-56.5-23.5T200-200v-520h-40v-80h200v-40h240v40h200v80h-40v520q0 33-23.5 56.5T680-120H280Zm400-600H280v520h400v-520ZM360-280h80v-360h-80v360Zm160 0h80v-360h-80v360ZM280-720v520-520Z"/>
                                </svg>
                            <h1>DELETE</h1>
                            </button>
                        </form>
                    </div>
                    <% } %>
            
                </div>
            <% }) %>
    <% } %>
<% } %>

